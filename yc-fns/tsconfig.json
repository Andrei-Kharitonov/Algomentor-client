{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",     
    "outDir": "dist",      
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "types": ["aws-lambda", "node"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}